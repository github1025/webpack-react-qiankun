{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "allowSyntheticDefaultImports": true,
    "types": [
      "react"
    ]
  }
}
